<div class="container-fluid mt-4" style="width: 38rem;">
    <div class="card text-center">
        <div class="card-header">
            <h1 style="text-shadow: 3px 3px lightgray;">Sign Up</h1>
            <p>Create an account so we can save your preferences</p>
        </div>
        <form class="card-body" id="signup-form">
            <div class="input-group mb-3">
                <span class="input-group-text" id="inputGroup-sizing-default">Username</span>
                <input type="text" class="form-control" aria-label="Sizing example input"
                    aria-describedby="inputGroup-sizing-default" id="username-input-signup" required>
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text" id="inputGroup-sizing-default">Password</span>
                <input type="password" class="form-control" aria-label="Sizing example input"
                    aria-describedby="inputGroup-sizing-default" id="password-input-signup" required>
            </div>

            <button type="submit" class="btn btn-primary" id="login-btn">Submit</button>

        </form>
    </div>
</div>




<script src="/js/signup.js"></script>
